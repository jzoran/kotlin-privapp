android_app {
  name: "Kotlin",
  manifest: "AndroidManifest.xml",
  privileged: true,
  platform_apis: true,
  certificate: "platform",

  srcs: [
    "src/**/*.kt",
    "src/**/*.java",
  ],

  resource_dirs: [
    "res/",
  ],

  static_libs: [
    "androidx.localbroadcastmanager_localbroadcastmanager",
  ],

  libs: [
    "telephony-common",
  ],

  optimize: {
    optimize: true,
    obfuscate: true,
    proguard_flags_files: [
      "proguard.flags",
    ],
  },
}
