android_app {
  name: "Kotlin",
  manifest: "AndroidManifest.xml",
  privileged: true,

  srcs: [
    "src/**/*.kt",
    "src/**/*.java",
  ],

  resource_dirs: [
    "res/",
  ],

  certificate: "platform",

  static_libs: [
    "androidx.localbroadcastmanager_localbroadcastmanager",
  ],

  optimize: {
    optimize: true,
    obfuscate: true,
    proguard_flags_files: [
      "proguard.flags",
    ],
  },
}
